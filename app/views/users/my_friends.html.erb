
<%= render 'friends/lookup' %>

<div id="friend-results">
  <%= render partial: 'friends/friend-result' %>
</div>   

<% if !@friendships.blank? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3" class="page-header">
          <h2>My Friends</h2> 
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="all-friends">
      <%= render "friends/friend-list" %>
    </tbody>
  </table>
<% else %>
  <div class="row col-lg-12">
    <p class="lead">
      You don't have any friends, how sad ðŸ˜¥
    </p>
  </div>
<% end %>

